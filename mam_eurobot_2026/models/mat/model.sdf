<?xml version="1.0" ?>
<sdf version="1.9">
  <!-- Define a floor mat (3000mm x 2000mm x 70mm) -->
	<model name="floor_mat">
		<static>true</static>
		<link name="floor_link">
			<collision name="collision">
				<geometry>
					<box>
						<size>2 3 0.007</size>  <!-- 3000mm x 2000mm x 70mm -->
					</box>
				</geometry>
				<surface>
					<friction>
						<ode>
							<mu>0.9</mu>
							<mu2>0.9</mu2>
						</ode>
					</friction>
				</surface>
			</collision>
			<visual name="visual">
					<geometry>
							<box>
									<size>2 3 0.007</size> <!-- 3000mm x 2000mm x 70mm -->
							</box>
					</geometry>
					<material>
							<diffuse>1 1 1 1</diffuse>
							<pbr>
									<metal>
											<albedo_map>file:///models/mat/mat_small.png</albedo_map>
											<metalness>0.0</metalness>
											<roughness>0.8</roughness>
									</metal>
							</pbr>
					</material>
			</visual>
		</link>
	</model>
</sdf>