<?xml version="1.0"?>
<sdf version="1.9">
  <model name="omni_like_robot" canonical_link="chassis">
    <pose>0 0 0 0 0 0</pose>

    <!-- CHASSIS -->
    <link name="chassis">
      <pose>0 0 0.05 0 0 0</pose>
      <inertial>
        <mass>1.0</mass>
        <inertia>
          <ixx>0.0012</ixx>
          <iyy>0.0040</iyy>
          <izz>0.0048</izz>
        </inertia>
      </inertial>
      <visual name="chassis_visual">
        <geometry>
          <box><size>0.25 0.18 0.05</size></box>
        </geometry>
        <material>
          <ambient>0.0 0.612 0.867 1</ambient>
          <diffuse>0.0 0.612 0.867 1</diffuse>
        </material>
      </visual>
      <collision name="chassis_collision">
        <geometry>
          <box><size>0.25 0.18 0.05</size></box>
        </geometry>
      </collision>
    </link>

    <!-- WHEELS -->

    <!-- FRONT LEFT -->
    <link name="front_left_wheel">
      <pose>0.1 0.09 0 -1.5707 0 0</pose>
      <inertial><mass>0.2</mass></inertial>
      <visual name="visual">
        <geometry><cylinder><radius>0.04</radius><length>0.02</length></cylinder></geometry>
        <material><ambient>0.0 0.29 0.46 1</ambient></material>
      </visual>
      <collision name="collision">
        <geometry><cylinder><radius>0.04</radius><length>0.02</length></cylinder></geometry>
      </collision>
    </link>

    <!-- FRONT RIGHT -->
    <link name="front_right_wheel">
      <pose>0.1 -0.09 0 -1.5707 0 0</pose>
      <inertial><mass>0.2</mass></inertial>
      <visual name="visual">
        <geometry><cylinder><radius>0.04</radius><length>0.02</length></cylinder></geometry>
        <material><ambient>0.0 0.29 0.46 1</ambient></material>
      </visual>
      <collision name="collision">
        <geometry><cylinder><radius>0.04</radius><length>0.02</length></cylinder></geometry>
      </collision>
    </link>

    <!-- REAR LEFT -->
    <link name="rear_left_wheel">
      <pose>-0.1 0.09 0 -1.5707 0 0</pose>
      <inertial><mass>0.2</mass></inertial>
      <visual name="visual">
        <geometry><cylinder><radius>0.04</radius><length>0.02</length></cylinder></geometry>
        <material><ambient>0.0 0.29 0.46 1</ambient></material>
      </visual>
      <collision name="collision">
        <geometry><cylinder><radius>0.04</radius><length>0.02</length></cylinder></geometry>
      </collision>
    </link>

    <!-- REAR RIGHT -->
    <link name="rear_right_wheel">
      <pose>-0.1 -0.09 0 -1.5707 0 0</pose>
      <inertial><mass>0.2</mass></inertial>
      <visual name="visual">
        <geometry><cylinder><radius>0.04</radius><length>0.02</length></cylinder></geometry>
        <material><ambient>0.0 0.29 0.46 1</ambient></material>
      </visual>
      <collision name="collision">
        <geometry><cylinder><radius>0.04</radius><length>0.02</length></cylinder></geometry>
      </collision>
    </link>

    <!-- JOINTS -->

    <joint name="front_left_wheel_joint" type="revolute">
      <parent>chassis</parent>
      <child>front_left_wheel</child>
      <axis><xyz>0 1 0</xyz></axis>
    </joint>

    <joint name="front_right_wheel_joint" type="revolute">
      <parent>chassis</parent>
      <child>front_right_wheel</child>
      <axis><xyz>0 1 0</xyz></axis>
    </joint>

    <joint name="rear_left_wheel_joint" type="revolute">
      <parent>chassis</parent>
      <child>rear_left_wheel</child>
      <axis><xyz>0 1 0</xyz></axis>
    </joint>

    <joint name="rear_right_wheel_joint" type="revolute">
      <parent>chassis</parent>
      <child>rear_right_wheel</child>
      <axis><xyz>0 1 0</xyz></axis>
    </joint>

    <!-- JOINT VELOCITY CONTROLLERS -->

    <!-- FRONT LEFT -->
    <plugin name="ignition::gazebo::systems::JointController"
            filename="libignition-gazebo-joint-controller-system.so">
      <joint_name>front_left_wheel_joint</joint_name>
      <command_type>velocity</command_type>
      <topic>/omni/front_left_speed</topic>
    </plugin>

    <!-- FRONT RIGHT -->
    <plugin name="ignition::gazebo::systems::JointController"
            filename="libignition-gazebo-joint-controller-system.so">
      <joint_name>front_right_wheel_joint</joint_name>
      <command_type>velocity</command_type>
      <topic>/omni/front_right_speed</topic>
    </plugin>

    <!-- REAR LEFT -->
    <plugin name="ignition::gazebo::systems::JointController"
            filename="libignition-gazebo-joint-controller-system.so">
      <joint_name>rear_left_wheel_joint</joint_name>
      <command_type>velocity</command_type>
      <topic>/omni/rear_left_speed</topic>
    </plugin>

    <!-- REAR RIGHT -->
    <plugin name="ignition::gazebo::systems::JointController"
            filename="libignition-gazebo-joint-controller-system.so">
      <joint_name>rear_right_wheel_joint</joint_name>
      <command_type>velocity</command_type>
      <topic>/omni/rear_right_speed</topic>
    </plugin>



  </model>
</sdf>
